{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "30000",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "DISABLE_TELEMETRY": "1",
    "MAX_MCP_OUTPUT_TOKENS": "40000",
    "MAX_THINKING_TOKENS": "10000",
    "SLASH_COMMAND_TOOL_CHAR_BUDGET": "30000"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "__ READ-ONLY CLI __",
      "Bash(cat:*)",
      "Bash(difft:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(printf:*)",
      "Bash(readlink:*)",
      "Bash(tail:*)",
      "Bash(test:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Read(//Users/jacob.hurlburt/**)",
      "__ SEARCH __",
      "Bash(ast-grep:*)",
      "Bash(fd:*)",
      "Bash(fzf:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "__ DATA PROCESSING __",
      "Bash(jq:*)",
      "Bash(yq:*)",
      "__ GIT READ-ONLY __",
      "Bash(git blame:*)",
      "Bash(git describe:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git ls-files:*)",
      "Bash(git ls-tree:*)",
      "Bash(git remote:*)",
      "Bash(git rev-parse:*)",
      "Bash(git shortlog:*)",
      "Bash(git show:*)",
      "Bash(git stash list:*)",
      "Bash(git status:*)",
      "__ GITHUB CLI READ-ONLY __",
      "Bash(gh auth status:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue status:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr status:*)",
      "Bash(gh pr view:*)",
      "Bash(gh repo view:*)",
      "__ LINTING/CHECKING __",
      "Bash(mypy:*)",
      "Bash(pixi run mypy:*)",
      "Bash(pixi run pytest:*)",
      "Bash(pre-commit run:*)",
      "Bash(pytest:*)",
      "Bash(sqruff:*)",
      "Bash(uv run mypy:*)",
      "Bash(uv run pytest:*)",

      "__ UNIVERSAL FLAGS __",
      "Bash(* --help)",
      "Bash(* -h)",
      "Bash(* --version)",
      "Bash(* -V)",

      "__ MCP TOOLS __",
      "mcp__*",

      "__ SKILLS __",
      "Skill(*)"
    ],
    "deny": [
      "__ GIT DESTRUCTIVE __",
      "Bash(git clean -f:*)",
      "Bash(git commit --no-verify:*)",
      "Bash(git commit -n:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "__ PRE-COMMIT BYPASS __",
      "Bash(SKIP=:*)",
      "Bash(pre-commit uninstall:*)",
      "Bash(prek uninstall:*)",
      "__ SECRETS __",
      "Read(.env)",
      "Read(.env.*)",
      "Read(~/.aws/**)",
      "Read(~/.config/gcloud/**)",
      "Read(~/.ssh/**)"
    ],
    "defaultMode": "acceptEdits"
  },
  "enableAllProjectMcpServers": true,
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); printf \"\\033[2m%s@%s \\033[36m%s\\033[0m \\033[2m[%s]\\033[0m\" \"$(whoami)\" \"$(hostname -s)\" \"$(echo \"$input\" | jq -r '.workspace.current_dir | gsub(\".*/\"; \"\")' 2>/dev/null || basename \"$(echo \"$input\" | jq -r '.workspace.current_dir')\" 2>/dev/null || echo \"unknown\")\" \"$(echo \"$input\" | jq -r '.model.display_name' 2>/dev/null || echo \"Claude\")\""
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "episodic-memory@superpowers-marketplace": true,
    "superpowers-lab@superpowers-marketplace": true,
    "atlassian-toolkit@atlassian-toolkit-dev": true,
    "code-review@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "superpowers-developing-for-claude-code@superpowers-marketplace": true,
    "claude-mem@thedotmack": true,
    "planning-with-files@planning-with-files": true
  },
  "extraKnownMarketplaces": {
    "superpowers-marketplace": {
      "source": {
        "source": "github",
        "repo": "obra/superpowers-marketplace"
      }
    },
    "atlassian-toolkit-dev": {
      "source": {
        "source": "directory",
        "path": "/Users/jacob.hurlburt/repos/atlassian-toolkit"
      }
    }
  }
}
