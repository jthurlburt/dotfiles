{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "30000",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "DISABLE_TELEMETRY": "1",
    "MAX_MCP_OUTPUT_TOKENS": "40000"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(ast-grep:*)",
      "Bash(awk:*)",
      "Bash(cat:*)",
      "Bash(claude -p:*)",
      "Bash(difft:*)",
      "Bash(env:*)",
      "Bash(export:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(fzf:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(mem:*)",
      "Bash(mypy:*)",
      "Bash(pixi:*)",
      "Bash(pixi run mypy:*)",
      "Bash(pixi run pytest:*)",
      "Bash(pixi run ruff:*)",
      "Bash(pre-commit:*)",
      "Bash(prek:*)",
      "Bash(pytest:*)",
      "Bash(readlink:*)",
      "Bash(rg:*)",
      "Bash(ruff:*)",
      "Bash(sed:*)",
      "Bash(shellcheck:*)",
      "Bash(shfmt:*)",
      "Bash(sqlfluff:*)",
      "Bash(sqlfmt:*)",
      "Bash(tail:*)",
      "Bash(test:*)",
      "Bash(tree:*)",
      "Bash(uv:*)",
      "Bash(uv run mypy:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run ruff:*)",
      "Bash(wait:*)",
      "Bash(yq:*)",
      "mcp__atlassian__getConfluencePage",
      "mcp__atlassian__getConfluencePageDescendants",
      "mcp__atlassian__getConfluenceSpaces",
      "mcp__atlassian__getJiraIssue",
      "mcp__atlassian__getPagesInConfluenceSpace",
      "mcp__atlassian__getTransitionsForJiraIssue",
      "mcp__atlassian__getVisibleJiraProjects",
      "mcp__atlassian__searchConfluenceUsingCql",
      "mcp__atlassian__searchJiraIssuesUsingJql",
      "mcp__ide__getDiagnostics",
      "mcp__local-semantic-memory__add_memory",
      "mcp__local-semantic-memory__archive_memory",
      "mcp__local-semantic-memory__get_memory",
      "mcp__local-semantic-memory__list_memories",
      "mcp__local-semantic-memory__restore_memory",
      "mcp__local-semantic-memory__search_memories",
      "mcp__local-semantic-memory__update_memory",
      "Read(//Users/jacob.hurlburt/**)",
      "WebFetch(domain:*)"
    ],
    "deny": [
      "Bash(git commit --no-verify:*)",
      "Bash(git commit -n:*)",
      "Bash(SKIP=:*)",
      "Bash(pre-commit uninstall:*)",
      "Bash(prek uninstall:*)",
      "mcp__claude-code__Bash",
      "mcp__claude-code__Edit",
      "mcp__claude-code__Glob",
      "mcp__claude-code__Grep",
      "mcp__claude-code__MultiEdit",
      "mcp__claude-code__NotebookEdit",
      "mcp__claude-code__Read",
      "mcp__claude-code__TodoWrite",
      "mcp__claude-code__WebFetch",
      "mcp__claude-code__WebSearch",
      "mcp__claude-code__Write"
    ],
    "ask": [
      "Bash(brew install:*)",
      "Bash(brew uninstall:*)",
      "Bash(gh pr create:*)",
      "Bash(git add:*)",
      "Bash(git branch -d:*)",
      "Bash(git branch -D:*)",
      "Bash(git cherry-pick:*)",
      "Bash(git commit:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git revert:*)",
      "Bash(pixi global:*)",
      "Bash(terraform:*)",
      "Bash(terramate:*)",
      "mcp__atlassian__addCommentToJiraIssue",
      "mcp__atlassian__createConfluencePage",
      "mcp__atlassian__createJiraIssue",
      "mcp__atlassian__editJiraIssue",
      "mcp__atlassian__transitionJiraIssue",
      "mcp__atlassian__updateConfluencePage"
    ],
    "defaultMode": "acceptEdits"
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); printf \"\\033[2m%s@%s \\033[36m%s\\033[0m \\033[2m[%s]\\033[0m\" \"$(whoami)\" \"$(hostname -s)\" \"$(echo \"$input\" | jq -r '.workspace.current_dir | gsub(\".*/\"; \"\")' 2>/dev/null || basename \"$(echo \"$input\" | jq -r '.workspace.current_dir')\" 2>/dev/null || echo \"unknown\")\" \"$(echo \"$input\" | jq -r '.model.display_name' 2>/dev/null || echo \"Claude\")\""
  },
  "enabledPlugins": {
    "superpowers@jthurlburt-claude-plugins": true,
    "episodic-memory@superpowers-marketplace": false,
    "superpowers-lab@superpowers-marketplace": true,
    "superpowers-developing-for-claude-code@superpowers-marketplace": true
  },
  "extraKnownMarketplaces": {
    "jthurlburt-claude-plugins": {
      "source": {
        "source": "directory",
        "path": "/Users/jacob.hurlburt/repos/claude-settings"
      }
    },
    "superpowers-marketplace": {
      "source": {
        "source": "github",
        "repo": "obra/superpowers-marketplace"
      }
    }
  },
  "alwaysThinkingEnabled": false
}
