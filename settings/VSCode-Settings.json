{
  // General Settings
  "workbench.colorTheme": "Monokai",
  "editor.minimap.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "application.shellEnvironmentResolutionTimeout": 20,
  "editor.fontLigatures": true,
  "terminal.integrated.fontFamily": "Source Code Pro for Powerline",
  "terminal.integrated.inheritEnv": false,
  "editor.largeFileOptimizations": false,
  "workbench.startupEditor": "none",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.associations": {
    "**/*dbt*/**/*.sql": "jinja-sql",
    "*.avsc": "json",
    "CODEOWNERS": "plaintext",
    "*.tm.hcl": "terramate",
    "*.tf.tmgen": "tf"
    // "**/*dbt*/**/*.yaml": "jinja-yaml",
    // "**/*dbt*/**/*.yml": "jinja-yaml",
    // "**/*dbt*/**/*.md": "jinja-md"
  },

  // Git Settings
  "git.autofetch": true,
  "gitlens.hovers.currentLine.over": "line",
  "diffEditor.ignoreTrimWhitespace": false,
  "git.confirmSync": false,
  "github.copilot.advanced": {},
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "git.replaceTagsWhenPull": true,
  "git.ignoreRebaseWarning": true,

  // Formatting Settings
  "editor.formatOnSaveMode": "file",
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "formattingToggle.affects": [
    "editor.formatOnSave",
    "notebook.formatOnSave.enabled"
  ],
  "notebook.formatOnSave.enabled": true,
  "prettier.ignorePath": "/Users/jacobhurlburt/.prettierignore",

  // Python Settings
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "python.interpreter.infoVisibility": "always",
  "ruff.nativeServer": true,

  // Language Settings
  "[jinja-sql]": {
    "editor.defaultFormatter": "innoverio.vscode-dbt-power-user"
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[terraform-vars]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  // DBT Settings
  "dbt.dbtIntegration": "cloud",
  "findrelated.workspaceRulesets": [
    {
      "name": "sql",
      "rules": [
        {
          "pattern": "^(.*/)?models/(.*/)?(.+\\.sql)$",
          "locators": ["**/compiled/**/$3"]
        },
        {
          "pattern": "^(.*/)?compiled/(.*/)?(.+\\.sql)$",
          "locators": ["**/run/**/$3"]
        },
        {
          "pattern": "^(.*/)?run/(.*/)?(.+\\.sql)$",
          "locators": ["**/models/**/$3"]
        }
      ]
    }
  ],
  "findrelated.applyRulesets": ["sql"],
  "findrelated.autoOpen": true,

  // Other Settings
  "redhat.telemetry.enabled": false
}
