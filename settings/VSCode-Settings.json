{
  // ═══════════════════════════════════════════════════════════════════════════
  // EDITOR & WORKBENCH
  // ═══════════════════════════════════════════════════════════════════════════
  "workbench.colorTheme": "Monokai",
  "workbench.startupEditor": "none",
  "editor.minimap.enabled": false,
  "editor.fontLigatures": true,
  "editor.largeFileOptimizations": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "security.workspace.trust.untrustedFiles": "open",
  "application.shellEnvironmentResolutionTimeout": 20,
  // ═══════════════════════════════════════════════════════════════════════════
  // TERMINAL
  // ═══════════════════════════════════════════════════════════════════════════
  "terminal.integrated.fontFamily": "Source Code Pro for Powerline",
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.enableImages": true,
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/bash"
    },
    "sh": {
      "path": "/bin/sh"
    }
  },
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "/bin/zsh"
    },
    "bash": {
      "path": "/bin/bash"
    }
  },
  "terminal.integrated.profiles.windows": {
    "Command Prompt": {
      "path": "${env:windir}\\System32\\cmd.exe"
    }
  },
  // ═══════════════════════════════════════════════════════════════════════════
  // FILE ASSOCIATIONS
  // ═══════════════════════════════════════════════════════════════════════════
  "files.associations": {
    "**/*dbt*/**/*.sql": "jinja-sql",
    "*.avsc": "json",
    "CODEOWNERS": "plaintext",
    "*.tm.hcl": "terramate",
    "*.tf.tmgen": "tf"
    // "**/*dbt*/**/*.yaml": "jinja-yaml",
    // "**/*dbt*/**/*.yml": "jinja-yaml",
    // "**/*dbt*/**/*.md": "jinja-md"
  },
  // ═══════════════════════════════════════════════════════════════════════════
  // GIT & VERSION CONTROL
  // ═══════════════════════════════════════════════════════════════════════════
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.replaceTagsWhenPull": true,
  "git.ignoreRebaseWarning": true,
  "gitlens.hovers.currentLine.over": "line",
  "diffEditor.ignoreTrimWhitespace": false,
  // ═══════════════════════════════════════════════════════════════════════════
  // FORMATTING (GENERAL)
  // ═══════════════════════════════════════════════════════════════════════════
  "editor.formatOnSaveMode": "file",
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "formattingToggle.affects": [
    "editor.formatOnSave",
    "notebook.formatOnSave.enabled"
  ],
  "prettier.ignorePath": "/Users/jacobhurlburt/.prettierignore",
  // ═══════════════════════════════════════════════════════════════════════════
  // PYTHON & NOTEBOOKS
  // ═══════════════════════════════════════════════════════════════════════════
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "diffEditor.ignoreTrimWhitespace": false
  },
  "python.languageServer": "None",
  "python.interpreter.infoVisibility": "always",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.extraPaths": [],
  "python.terminal.activateEnvironment": false,
  "python-envs.terminal.autoActivationType": "off",
  "ruff.nativeServer": true,
  "notebook.formatOnSave.enabled": true,
  "notebook.codeActionsOnSave": {
    "notebook.source.fixAll": "explicit",
    "notebook.source.organizeImports": "explicit"
  },
  // ═══════════════════════════════════════════════════════════════════════════
  // TERRAFORM
  // ═══════════════════════════════════════════════════════════════════════════
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[terraform-vars]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "terraform.mcp.server.enable": false,
  // ═══════════════════════════════════════════════════════════════════════════
  // DBT & SQL
  // ═══════════════════════════════════════════════════════════════════════════
  "[jinja-sql]": {
    "editor.defaultFormatter": "innoverio.vscode-dbt-power-user"
  },
  "dbt.dbtIntegration": "cloud",
  "findrelated.workspaceRulesets": [
    {
      "name": "sql",
      "rules": [
        {
          "pattern": "^(.*/)?models/(.*/)?(.+\\.sql)$",
          "locators": ["**/compiled/**/$3"]
        },
        {
          "pattern": "^(.*/)?compiled/(.*/)?(.+\\.sql)$",
          "locators": ["**/run/**/$3"]
        },
        {
          "pattern": "^(.*/)?run/(.*/)?(.+\\.sql)$",
          "locators": ["**/models/**/$3"]
        }
      ]
    }
  ],
  "findrelated.applyRulesets": ["sql"],
  "findrelated.autoOpen": true,
  // ═══════════════════════════════════════════════════════════════════════════
  // OTHER LANGUAGE FORMATTERS
  // ═══════════════════════════════════════════════════════════════════════════
  "[dockercompose]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  // ═══════════════════════════════════════════════════════════════════════════
  // GITHUB COPILOT
  // ═══════════════════════════════════════════════════════════════════════════
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Use conventional commit format: {type}: {concise subject line summarizing the overall change}"
    },
    {
      "text": "Types: feat (new feature), fix (bug fix), refactor (code restructure), docs (documentation), style (formatting), test (tests), build (build system)"
    },
    {
      "text": "Subject line: present tense, imperative mood, under 72 characters, no period at end"
    },
    {
      "text": "For commits with multiple changes, add a blank line then bulleted list using hyphens"
    },
    {
      "text": "Each bullet: specific change using present tense imperative (e.g., 'Add X feature', 'Remove deprecated Y', 'Update Z configuration')"
    },
    {
      "text": "Focus on what changed and why, not implementation details"
    },
    {
      "text": "Example single-line commit: 'fix: resolve race condition in async task handler'"
    },
    {
      "text": "Example multi-line commit: 'feat: update Claude Code settings with latest features\\n\\n- Replace deprecated includeCoAuthoredBy with attribution config\\n- Add MAX_THINKING_TOKENS for extended reasoning\\n- Enable auto-approval for project MCP servers\\n- Add security deny rules for credential paths'"
    }
  ],
  "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [
    {
      "text": "PR title: Use same conventional commit format as commit messages (e.g., 'feat: add user authentication system')"
    },
    {
      "text": "PR body structure: Start with ## Summary section containing 1-3 bullet points explaining what changed and why"
    },
    {
      "text": "Summary bullets: Focus on business value and impact, not implementation details"
    },
    {
      "text": "After Summary, add ## Test plan section with bulleted checklist of verification steps"
    },
    {
      "text": "Test plan format: Use markdown checkboxes (- [ ]) for manual testing steps"
    },
    {
      "text": "For complex changes, optionally add ## Implementation notes with before/after code examples using markdown code blocks"
    },
    {
      "text": "Keep total PR description concise - most PRs need only Summary and Test plan sections"
    },
    {
      "text": "Example PR body: '## Summary\\n- Updated Claude Code settings to latest version\\n- Added security protections for credential files\\n- Enabled new reasoning features\\n\\n## Test plan\\n- [ ] Verify settings load without errors\\n- [ ] Confirm security rules block credential access\\n- [ ] Test extended thinking on complex tasks'"
    }
  ],
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.advanced": {},
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.editor.enableCodeActions": false,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.copilotDebugCommand.enabled": false,
  "github.copilot.chat.reviewAgent.enabled": false,
  "github.copilot.chat.reviewSelection.enabled": false,
  "github.copilot.chat.startDebugging.enabled": false,
  "github.copilot.chat.newWorkspaceCreation.enabled": false,
  "github.copilot.chat.setupTests.enabled": false,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  // ═══════════════════════════════════════════════════════════════════════════
  // AI TOOLS & MCP
  // ═══════════════════════════════════════════════════════════════════════════
  "chat.mcp.discovery.enabled": {
    "claude-desktop": true,
    "windsurf": true,
    "cursor-global": true,
    "cursor-workspace": true
  },
  "chat.agent.maxRequests": 50,
  "chat.useAgentsMdFile": true,
  // ═══════════════════════════════════════════════════════════════════════════
  // PRIVACY & TELEMETRY
  // ═══════════════════════════════════════════════════════════════════════════
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  // ═══════════════════════════════════════════════════════════════════════════
  // EXTENSIONS & MISC
  // ═══════════════════════════════════════════════════════════════════════════
  "yaml.format.enable": false,
  "extensions.ignoreRecommendations": true,
  "claudeCode.useTerminal": true
}
